	<link href="../css/bootstrap-select.min.css" rel="stylesheet" />
	<style>
      /* Main marketing message and sign up button */
      .jumbotron {
	  /*height: 400px;*/
        margin: 20px 0;
        text-align: center;
		/*background: url("img/sub.png") no-repeat;*/
